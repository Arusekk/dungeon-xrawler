regex_c_spc:=[ 	]
regex_c_n:=[a-zA-Z_][a-zA-Z0-9_]*${regex_c_spc}*
# regex_c_subn:=(${regex_c_n}::)*${regex_c_n}
regex_c_subn:=(std${regex_c_spc}*::${regex_c_spc}*)?${regex_c_n}
regex_c_type:=((const|extern|abstract|public)${regex_c_spc}*)*${regex_c_subn}(<.+>)?(\*+|&&?|${regex_c_spc})${regex_c_spc}*
regex_c_typen:=${regex_c_spc}*${regex_c_type}${regex_c_n}(\[[0-9]*\]${regex_c_spc}*)*
regex_c_funcn:=${regex_c_type}(${regex_c_subn}|(operator..?)${regex_c_spc}*)
regex_c_nonemptylist:=((${regex_c_typen},)*${regex_c_typen}(, \.\.\.)?)
regex_c_func:=^(${regex_c_funcn}\((${regex_c_nonemptylist}?|void)\)${regex_c_spc}*\{?${regex_c_spc}*?)|(template${regex_c_spc}*<.+>)$$
